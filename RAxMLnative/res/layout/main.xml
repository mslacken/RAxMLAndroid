<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RAxML"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Tree" />

  <TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="result"
    android:textAppearance="?android:attr/textAppearanceMedium" 
    android:id="@+id/result"/>

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >
          <TextView
              android:id="@+id/DataFileName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="/sdcard/tiny.binary" />
		  <Button
		      android:id="@+id/buttonSelectData"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="Select data" />
          <TextView
              android:id="@+id/TreeFileName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="/sdcard/RAxML_parsimonyTree.tiny.0" />
		  <Button
		      android:id="@+id/buttonSelectTree"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="Select starting tree" />
      <TableRow
          android:id="@+id/tableRow3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >
		  <TextView
		      android:id="@+id/parameter1Desc"
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content"
		      android:text="Output file name:"/>
		  <EditText
		      android:id="@+id/outFileName"
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content"
		      android:text="RAxMLout"
		      android:textAppearance="?android:attr/textAppearanceMedium" />
      </TableRow>
      <TableRow
          android:id="@+id/tableRow4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >

		  <Switch
		      android:id="@+id/useMedian"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="Use median" />

      </TableRow>
  </TableLayout>

  <TableRow
      android:id="@+id/tableRow5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Model:"
              android:textAppearance="?android:attr/textAppearanceLarge" />

          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content" />

      <RadioGroup
          android:id="@+id/radioGroup1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >

          <RadioButton
              android:id="@+id/cat"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="true"
              android:text="CAT" />

          <RadioButton
              android:id="@+id/gamma"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="GAMMA" />
          <RadioButton
              android:id="@+id/gamma_i"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="GAMMA_I" />
      </RadioGroup>

  </TableRow>

</LinearLayout>